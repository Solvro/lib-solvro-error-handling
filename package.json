{
  "name": "@solvro/error-handling",
  "version": "0.0.0",
  "description": "Utilities for rich error handling",
  "homepage": "https://github.com/Solvro/lib-solvro-error-handling#readme",
  "bugs": {
    "url": "https://github.com/Solvro/lib-solvro-error-handling/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Solvro/lib-solvro-error-handling.git"
  },
  "license": "MPL-2.0",
  "type": "module",
  "exports": {
    "./base": {
      "types": "./dist/base.d.ts",
      "import": "./dist/base.js",
      "require": "./dist/base.cjs"
    },
    "./install-context": {
      "types": "./dist/install-context.d.ts",
      "import": "./dist/install-context.js",
      "require": "./dist/install-context.cjs"
    },
    "./reporting": {
      "types": "./dist/reporting.d.ts",
      "import": "./dist/reporting.js",
      "require": "./dist/reporting.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup lib/*.ts --format cjs,esm --dts",
    "lint": "tsc && eslint && prettier --check .",
    "test": "mocha"
  },
  "prettier": "@solvro/config/prettier",
  "mocha": {
    "extension": ".test.ts",
    "require": [
      "ts-node-maintained/register",
      "./test/support/setup.ts"
    ]
  },
  "devDependencies": {
    "@solvro/config": "^2.0.7",
    "@types/chai": "^5.2.2",
    "@types/chai-as-promised": "^8.0.2",
    "@types/chai-spies": "^1.0.6",
    "@types/mocha": "^10.0.10",
    "chai": "^5.2.0",
    "chai-as-promised": "^8.0.1",
    "chai-spies": "^1.1.0",
    "eslint": "^9.27.0",
    "mocha": "^11.5.0",
    "prettier": "^3.5.3",
    "ts-node-maintained": "^10.9.5",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
